<UserControl x:Class="Shaitanet.UC.ProductUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shaitanet.UC"
             mc:Ignorable="d" 
             d:DesignHeight="200" MinWidth="300" Background="White">
    <Border Margin="10" BorderBrush="Black" BorderThickness="1">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Image Source="{Binding Icon}" Name="IconImg" Width="130" Height="130" HorizontalAlignment="Left" Margin="10"/>

            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Text="{Binding Name}"></TextBlock>
            <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="11" Text="{Binding Cost}"></TextBlock>


        </Grid>
    </Border>
</UserControl>
